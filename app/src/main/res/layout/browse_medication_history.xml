<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/history_med_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/history_med_image"
        app:layout_constraintTop_toTopOf="@+id/history_med_image"
        tools:text="Appointment Name"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/history_med_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_avatar_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/history_med_dossage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/history_med_date"
        app:layout_constraintEnd_toEndOf="@+id/history_med_name"
        app:layout_constraintStart_toStartOf="@+id/history_med_name"
        app:layout_constraintTop_toBottomOf="@+id/history_med_name"
        tools:text="Today, 12 December"/>

    <TextView
        android:id="@+id/history_med_date"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/history_med_image"
        app:layout_constraintEnd_toEndOf="@+id/history_med_dossage"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/history_med_dossage"/>

</android.support.constraint.ConstraintLayout>