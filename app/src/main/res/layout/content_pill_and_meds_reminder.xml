<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PillAndMedsReminderActivity"
    tools:showIn="@layout/activity_pill_and_meds_reminder">

    <TextView
        android:id="@+id/txt_pillPlannerViewDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="Today"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_viewCalendar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_viewCalendar"
        app:layout_constraintTop_toTopOf="@+id/btn_viewCalendar"
        app:layout_constraintVertical_bias="0.517"/>

    <Button
        android:id="@+id/btn_viewCalendar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/icon_calendar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/btn_addNewMedication"
        app:layout_constraintRight_toLeftOf="@+id/btn_addNewMedication"
        app:layout_constraintTop_toTopOf="@+id/btn_addNewMedication"/>

    <Button
        android:id="@+id/btn_addNewMedication"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/icon_add"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_addNewMedication"
        android:id="@+id/morning_constraintLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/afternoon_constraintLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0">

        <TextView
            android:id="@+id/txt_morning_medicationStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_morning_sectionBackground"
            app:layout_constraintEnd_toEndOf="@+id/img_morning_sectionBackground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nothing Scheduled"/>

        <ImageView
            android:id="@+id/img_morning_moreIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/morning_constraintLayout"
            app:layout_constraintRight_toRightOf="@+id/morning_constraintLayout"
            app:srcCompat="@drawable/icon_forward_arrow_blue"/>

        <ImageView
            android:id="@+id/img_morning_sectionBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/morning_medication_section"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/afternoon_constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/morning_constraintLayout"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/morning_constraintLayout"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/txt_afternoon_medicationStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/img_afternoon_sectionBackground"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nothing Scheduled"/>

        <ImageView
            android:id="@+id/img_afternoon_moreIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/img_afternoon_sectionBackground"
            app:srcCompat="@drawable/icon_forward_arrow_red"/>

        <ImageView
            android:id="@+id/img_afternoon_sectionBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/afternoon_medication_section"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/evening_constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/morning_constraintLayout"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/morning_constraintLayout"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/morning_constraintLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/txt_evening_medicationStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_evening_sectionBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nothing Scheduled"/>

        <ImageView
            android:id="@+id/img_evening_moreIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_evening_sectionBackground"
            app:layout_constraintRight_toRightOf="@+id/img_evening_sectionBackground"
            app:srcCompat="@drawable/icon_forward_arrow_green"/>

        <ImageView
            android:id="@+id/img_evening_sectionBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/evening_medication_section"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/night_constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/afternoon_constraintLayout"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/afternoon_constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/evening_constraintLayout"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/evening_constraintLayout"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/txt_night_medicationStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_night_sectionBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nothing Scheduled"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_night_moreIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_night_sectionBackground"
            app:layout_constraintRight_toRightOf="@+id/img_night_sectionBackground"
            app:srcCompat="@drawable/icon_forward_arrow_black"/>

        <ImageView
            android:id="@+id/img_night_sectionBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/night_medication_section"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
