<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageButton
        android:id="@+id/user_avatar_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="#fff"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/user_avatar_1"/>

    <ImageButton
        android:id="@+id/user_avatar_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:background="#fff"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/user_avatar_2"/>

    <ImageButton
        android:id="@+id/user_avatar_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:background="#fff"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/user_avatar_3"/>

    <ImageButton
        android:id="@+id/user_avatar_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="#fff"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/user_avatar_4"/>

</LinearLayout>