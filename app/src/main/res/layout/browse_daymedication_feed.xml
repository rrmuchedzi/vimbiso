<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:orientation="horizontal"
              android:padding="8dp"
              android:weightSum="3">

    <ImageView
        android:id="@+id/medication_feed_image"
        android:layout_width="@dimen/medication_pillimage_size"
        android:scaleType="fitCenter"
        android:layout_height="@dimen/medication_pillimage_size"
        android:layout_gravity="center"
        android:padding="5dp"
        android:src="@drawable/drugpill_blue"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/medication_feed_drugname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            tools:text="Drug Title Goes Here"/>

        <TextView
            android:id="@+id/medication_feed_drugdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textStyle="italic"
            tools:text="Drug Description Goes Here"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/medication_feed_tickbox"
        android:layout_width="@dimen/medication_tickbox_size"
        android:layout_height="@dimen/medication_tickbox_size"
        android:layout_gravity="center"
        android:background="@drawable/icon_notcomplete_tickbox"/>
</LinearLayout>