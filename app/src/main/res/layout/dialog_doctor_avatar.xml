<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vertical_sides"
        android:layout_marginTop="@dimen/margin_vertical_sides"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/avatar_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            app:srcCompat="@drawable/avatar_1"/>

        <ImageButton
            android:id="@+id/avatar_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            app:srcCompat="@drawable/avatar_3"/>

        <ImageButton
            android:id="@+id/avatar_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            app:srcCompat="@drawable/avatar_5"/>

        <ImageButton
            android:id="@+id/avatar_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            app:srcCompat="@drawable/avatar_7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vertical_sides"
        android:layout_marginTop="@dimen/margin_vertical_sides"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/avatar_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            app:srcCompat="@drawable/avatar_2"/>

        <ImageButton
            android:id="@+id/avatar_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            app:srcCompat="@drawable/avatar_4"/>

        <ImageButton
            android:id="@+id/avatar_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            app:srcCompat="@drawable/avatar_6"/>

        <ImageButton
            android:id="@+id/avatar_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            app:srcCompat="@drawable/avatar_8"/>
    </LinearLayout>


</LinearLayout>